<Window x:Class="PortfolioTracker.MainWindow"  
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        mc:Ignorable="d"  
       Title="Portfolio Tracker" Height="450" Width="800"  
       Background="#0a0b0d">  
   <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border CornerRadius="15" BorderBrush="Transparent" BorderThickness="2" Grid.Row="0">
            <Canvas x:Name="chartCanvas" Background="White" Margin="30,2,30,2"/>
        </Border>

        <Border CornerRadius="15" BorderBrush="Transparent" BorderThickness="2" Grid.Row="1">
            <DataGrid x:Name="PortfolioDataGrid" AutoGenerateColumns="False" Background="Transparent" CanUserAddRows="False" CanUserDeleteRows="False" Width="700">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Currency" Binding="{Binding Currency}" Width="80"/>
                    <DataGridTextColumn Header="Wallet Name" Binding="{Binding WalletName}" Width="150"/>
                    <DataGridTextColumn Header="Balance" Binding="{Binding BalanceFormatted}" Width="200"/>
                    <DataGridTextColumn Header="Last Updated" Binding="{Binding LastUpdated, StringFormat={}{0:yyyy-MM-dd}}" Width="120"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>  
</Window>
